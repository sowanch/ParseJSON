<div class="jumbotron">
    <h1>Retrieve Survey Data</h1>
    <div class="col-md-12">
        <section id="loginForm">
            @using (Html.BeginForm("zipUp", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {

        <h4>Drag in an SQLite file to retrieve survey data</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-5 control-label">Pick the SQLite file</div>
            <div class="col-md-7">
                <input type="file" name="file" id="file" accept=".sqlite" required />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-5 control-label">
                Key in the email address with which you wish to receive the file
            </div>
            <div class="col-md-7">
                @Html.TextBox("Email")
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">

            </div>
        </div>

        <input type="submit" value="Send" class="btn btn-primary btn-lg" />
        @* Enable this once you have account confirmation enabled for password reset functionality
    <p>
        @Html.ActionLink("Forgot your password?", "ForgotPassword")
    </p>*@
}
        </section>
    </div>
    <p></p>
</div>

